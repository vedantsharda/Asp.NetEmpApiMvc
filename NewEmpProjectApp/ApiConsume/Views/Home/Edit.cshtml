                <label asp-for="EmpSalary" class="control-label"></label>
                <input asp-for="EmpSalary" class="form-control" />
                <span asp-validation-for="EmpSalary" class="text-danger"></span>

                <label asp-for="EmpAddress1" class="control-label"></label>
                <input asp-for="EmpAddress1" class="form-control" />
                <span asp-validation-for="EmpAddress1" class="text-danger"></span>

