                <input asp-for="EmpAddress2" class="form-control" />
                <span asp-validation-for="EmpAddress2" class="text-danger"></span>

                <label asp-for="EmpAddress3" class="control-label"></label>
                <input asp-for="EmpAddress3" class="form-control" />
                <span asp-validation-for="EmpAddress3" class="text-danger"></span>

                <label asp-for="EmpState" class="control-label"></label>
                <input asp-for="EmpState" class="form-control" />
                <span asp-validation-for="EmpState" class="text-danger"></span>

